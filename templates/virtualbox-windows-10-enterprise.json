{
    "builders": [
        {
            "type": "virtualbox-iso",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "2048"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--vram",
                    "48"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "2"
                ]
            ],
            "guest_additions_mode": "{{ user `guest_additions_mode` }}",
            "guest_os_type": "Windows10_64",
            "headless": "{{ user `headless` }}",
            "iso_url": "{{ user `images_dir` }}/Windows_10_Enterprise.iso",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "md5",
            "communicator": "winrm",
            "winrm_username": "vagrant",
            "winrm_password": "vagrant",
            "winrm_timeout": "12h",
            "shutdown_command": "powershell.exe -ExecutionPolicy Bypass -File A:/packer_shutdown.ps1",
            "shutdown_timeout": "15m",
            "floppy_files": [
                "unattend_files/windows_10/Autounattend.xml",
                "unattend_files/windows_10/Post_Autounattend.xml",
                "scripts/winrm.ps1",
                "scripts/packer_shutdown.ps1",
                "bypass_winrm_filecopy/cookbooks.zip"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "inline": [
                "Expand-Archive -Path A:/cookbooks.zip -DestinationPath C:/Chef -Force"
            ]
        },
        {
            "type": "chef-solo",
            "remote_cookbook_paths": [
                "C:/Chef/cookbooks", 
                "C:/Chef/cookbooks/vendor"
            ],
            "run_list": ["packer::default"],
            "guest_os_type": "windows"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": true,
            "output": "{{ user `images_dir` }}/{{.Provider}}-windows-10.box"
        }
    ],
    "variables": {
        "guest_additions_mode": "attach",
        "headless": "true",
        "iso_checksum": "f4f85d77516721d9a19ca866172a5ecb",
        "images_dir": "{{env `IMAGES_DIR`}}"
    }
}
