{
    "builders": [
        {
            "type": "virtualbox-iso",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "2048"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--vram",
                    "48"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "2"
                ]
            ],
            "guest_additions_mode": "{{ user `guest_additions_mode` }}",
            "guest_os_type": "Windows2016_64",
            "headless": "{{ user `headless` }}",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "md5",
            "communicator": "winrm",
            "winrm_username": "vagrant",
            "winrm_password": "vagrant",
            "winrm_timeout": "12h",
            "shutdown_command": "powershell.exe -ExecutionPolicy Bypass -File A:/packer_shutdown.ps1",
            "shutdown_timeout": "15m",
            "floppy_files": [
                "unattend_files/windows_server_2016/Autounattend.xml",
                "unattend_files/windows_server_2016/Post_Autounattend.xml",
                "scripts/winrm.ps1",
                "scripts/packer_shutdown.ps1",
                "scripts/install_virtualbox_guest_additions.ps1",
                "bypass_winrm_filecopy/cookbooks.zip"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "inline": [
                "Expand-Archive -Path A:/cookbooks.zip -DestinationPath C:/Chef -Force"
            ]
        },
        {
            "type": "chef-solo",
            "remote_cookbook_paths": [
                "C:/Chef/cookbooks", 
                "C:/Chef/cookbooks/vendor"
            ],
            "run_list": ["packer::default"],
            "guest_os_type": "windows"
        },
        {
            "type": "powershell",
            "inline": [
                "A:/install_virtualbox_guest_additions.ps1"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": true,
            "output": "{{ user `images_dir`}}/{{.Provider}}-windows-2016-datacenter.box"
        }
    ],
    "variables": {
        "guest_additions_mode": "attach",
        "headless": "true",
        "iso_checksum": "70721288bbcdfe3239d8f8c0fae55f1f",
        "images_dir": "{{env `IMAGES_DIR`}}/Windows_Server_2016.iso"
    }
}
